<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
	"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">


<hibernate-configuration>
	<session-factory>

		<property name="hibernate.dialect">org.hibernate.dialect.MySQL5InnoDBDialect</property>
		<property name="hibernate.show_sql">true</property>
		<property name="hibernate.format_sql">true</property>
		<property name="hibernate.hbm2ddl.auto">update</property>
		
		<!-- import entity file's mapping file -->
		<mapping resource="com/github/entity/user.hbm.xml" />
		<mapping resource="com/github/entity/customer.hbm.xml" />
		<mapping resource="com/github/entity/LinkMan.hbm.xml" />
		<mapping resource="com/github/entity/Visit.hbm.xml" />
		<mapping resource="com/github/entity/Dict.hbm.xml" />

	</session-factory>

</hibernate-configuration>